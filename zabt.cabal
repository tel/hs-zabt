name:                zabt
version:             0.1.0.1
synopsis:            Simple-minded abstract binding trees
description:         Please see README.md
homepage:            https://github.com/tel/hs-zabt#readme
license:             BSD3
license-file:        LICENSE
author:              Joseph Tel Abrahamson <me@jspha.com>
maintainer:          me@jspha.com
copyright:           2016 Joseph Tel Abrahamson
category:            Language
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     
    Zabt
    Zabt.Arity
    Zabt.Freshen
    Zabt.Internal.Index
    Zabt.Internal.Nameless
    Zabt.Internal.Term
    Zabt.View
    Zabt.Visits
  build-depends:       
      base >= 4.7 && < 5
    , containers >= 0.5.0.0 && < 0.6
  default-language:    Haskell2010

test-suite zabt-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             
    Spec.hs
  build-depends:       
      base
    , zabt
    , tasty
    , tasty-hspec
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/tel/hs-zabt
